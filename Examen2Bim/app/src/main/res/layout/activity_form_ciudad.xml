<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo: Nombre de la Ciudad -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la ciudad"
            android:inputType="text"/>

        <!-- Campo: Población -->
        <EditText
            android:id="@+id/etPoblacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Población"
            android:inputType="number"/>

        <!-- Campo: Altitud -->
        <EditText
            android:id="@+id/etAltitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Altitud (metros)"
            android:inputType="numberDecimal"/>

        <!-- Campo: Fecha de Fundación -->
        <EditText
            android:id="@+id/etFechaFundacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de fundación (dd/mm/aaaa)"
            android:inputType="date"/>

        <!-- Campo: Latitud -->
        <EditText
            android:id="@+id/etLatitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitud"
            android:inputType="numberDecimal|numberSigned"/>

        <!-- Campo: Longitud -->
        <EditText
            android:id="@+id/etLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud"
            android:inputType="numberDecimal|numberSigned"/>

        <!-- Checkbox: Es Capital -->
        <CheckBox
            android:id="@+id/cbEsCapital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Es Capital"/>

        <!-- Botón: Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>